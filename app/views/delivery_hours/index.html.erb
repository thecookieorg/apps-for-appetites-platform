<p id="notice"><%= notice %></p>

<h1>Listing Delivery Hours</h1>

<table>
  <thead>
    <tr>
      <th>Monday</th>
      <th>Monday closing time</th>
      <th>Tuesday</th>
      <th>Tuesday closing time</th>
      <th>Wednesday</th>
      <th>Wednesday closing time</th>
      <th>Thursday</th>
      <th>Thursday closing time</th>
      <th>Friday</th>
      <th>Friday closing time</th>
      <th>Saturday</th>
      <th>Saturday closing time</th>
      <th>Sunday</th>
      <th>Sunday closing time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @delivery_hours.each do |delivery_hour| %>
      <tr>
        <td><%= delivery_hour.monday %></td>
        <td><%= delivery_hour.monday_closing_time %></td>
        <td><%= delivery_hour.tuesday %></td>
        <td><%= delivery_hour.tuesday_closing_time %></td>
        <td><%= delivery_hour.wednesday %></td>
        <td><%= delivery_hour.wednesday_closing_time %></td>
        <td><%= delivery_hour.thursday %></td>
        <td><%= delivery_hour.thursday_closing_time %></td>
        <td><%= delivery_hour.friday %></td>
        <td><%= delivery_hour.friday_closing_time %></td>
        <td><%= delivery_hour.saturday %></td>
        <td><%= delivery_hour.saturday_closing_time %></td>
        <td><%= delivery_hour.sunday %></td>
        <td><%= delivery_hour.sunday_closing_time %></td>
        <td><%= link_to 'Show', delivery_hour %></td>
        <td><%= link_to 'Edit', edit_delivery_hour_path(delivery_hour) %></td>
        <td><%= link_to 'Destroy', delivery_hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

