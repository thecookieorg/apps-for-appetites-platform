<p id="notice"><%= notice %></p>

<h1>Listing Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant name</th>
      <th>Restaurant phone number</th>
      <th>Full address</th>
      <th>Pickup</th>
      <th>Delivery</th>
      <th>Accept orders for later</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.restaurant_name %></td>
        <td><%= restaurant.restaurant_phone_number %></td>
        <td><%= restaurant.full_address %></td>
        <td><%= restaurant.pickup %></td>
        <td><%= restaurant.delivery %></td>
        <td><%= restaurant.accept_orders_for_later %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

