<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :restaurant_name %>
    <%= f.input :restaurant_phone_number %>
    <%= f.input :full_address %>
    <%= f.input :pickup %>
    <%= f.input :delivery %>
    <%= f.input :accept_orders_for_later %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
